<div class="container">
  <% content_for :body_class, "blogs-index" %>
  <% content_for :extra_styles do %>
    <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
  <% end %>

  <h1>Our Blog</h1>

  <div class="blog-container2">
    <% @blogs.each do |blog| %>
      <div class="blog-post">
        <%= image_tag(blog.image) if blog.image.present? %>
        <h2><%= link_to blog.title, blog %></h2>
        <p><%= truncate(blog.content, length: 200) %></p>
        <% if blog.user == current_user %> <br>
          <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-secondary' %> <br>
          <br>
          <%= button_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>

        <% end %>
      </div>

    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="pagination-container">
      <%= paginate @blogs %>
    </div>
    <%= link_to 'Create New Blog', new_blog_path, class: 'create-blog-button' %>
  <% end %>

</div>